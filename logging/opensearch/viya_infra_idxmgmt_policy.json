{
    "policy": {
        "policy_id": "viya_infra_idxmgmt_policy",
        "description": "An index management policy for infrastructure log messages.",
        "error_notification": null,
        "default_state": "hot",
        "states": [
            {
                "name": "hot",
                "actions": [],
                "transitions": [
                    {
                        "state_name": "doomed",
                        "conditions": {
                            "min_index_age": "xxxRETENTION_PERIODxxx"
                        }
                    }
                ]
            },
            {
                "name": "doomed",
                "actions": [
                    {
                        "delete": {}
                    }
                ],
                "transitions": []
            }
        ],
        "ism_template": {
                "index_patterns": [
                        "viya_logs-openshift-*"
                 ],
                 "priority": 110
        }
    }
}

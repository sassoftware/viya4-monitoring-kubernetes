apiVersion: v1
kind: ConfigMap
metadata:
  name: speedystore
  labels:
    grafana_folder: "1" # This label is crucial for the Grafana sidecar to recognize it as a folder
data:
  folder.yaml: |
    apiVersion: grizzly.grafana.com/v1alpha1
    kind: DashboardFolder
    metadata:
      name: SASSpeedyStoreFolder
    spec:
      title: SAS SpeedyStore Folder
      uid: sas-speedystore-dashboard # Unique identifier for the folder
